package first;

public class Employee {
	String name;
	int id;
	double salary;
	Employee(String name,int id,double salary)
	{
	 this.name=name;
	 this.id=id;
	 this.salary=salary;
	}
//display details
void display()
{
	System.out.println("Employee ID:" +id);
	System.out.println("Name:" +name);
	System.out.println("Salary:" +salary);
	System.out.println("Employee Details");
}
//increase salary
void increasesalary(double percentage)
{
	double increment= (salary*percentage)/100;
	salary=salary+increment;
	System.out.println(name+"s salary increased by" +10+ "%");
}
}
package first;

public class Main1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
        Employee e1=new Employee("Jas",100,15000);
        Employee e2=new Employee("Joe",101,15500);
        System.out.println("Initial Employee Details");
        e1.display();
        e2.display();
        e1.increasesalary(10);
        e2.increasesalary(10);
        System.out.println("Updated Employee Details:");
        e1.display();
        e2.display();
       // Employee[] array=new Employee[10];
        //array[0]=new Employee("Jacob")
}
}


OUTPUT:
Employee ID:101
Name:Joe
Salary:17050.0
Employee Details

